@model WebShop.Domain.Data.UserInfoIdentity

<div class="col-xs-12">
    <div class="row">
        <div class="row row-nomargin">
            <div class="text-center">
                <p class="separator"></p>
                <span class="separator-text">@Resource.Details</span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label text-uppercase">@Resource.Name</label>
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">@Model.UserName</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label text-uppercase">Email</label>
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">@Model.Email</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label text-uppercase">@Resource.PhoneNumber</label>
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">@Model.PhoneNumber</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="row row-nomargin">
            <div class="text-center">
                <p class="separator"></p>
                <span class="separator-text">@Resource.SocialAccount</span>
            </div>
        </div>
        <div>
            <ul class="list-inline">
                @foreach (var acc in Model.Logins)
                {
                    <li>
                        <span class="icon-@acc.LoginProvider.ToLowerInvariant() social-icon"></span>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>