@using System.Threading
@{
    var symbol = Thread.CurrentThread.CurrentUICulture.NumberFormat.CurrencySymbol;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-1.7.2.min.js"></script>
    <script src="~/Scripts/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Scripts/angular.js"></script>

    <link href="~/Content/angular-fancy-modal.css" rel="stylesheet" />
    <link href="~/Content/slick.css" rel="stylesheet" />
    <link href="~/Content/AdditionalView.css" rel="stylesheet" />
    <link href="~/Content/ng-tooltips.css" rel="stylesheet" />

    <link href="~/Content/slick-theme.css" rel="stylesheet" />
    <link href="~/Content/toaster.css" rel="stylesheet" />
    <link href="~/Content/hover.css" rel="stylesheet" />
    <link href="~/Content/NavBar.css" rel="stylesheet" />
    <link href="~/Content/Carousel.css" rel="stylesheet" />
</head>
<body ng-app="globalApp" ng-controller="globalCtrl" ng-init="initSymbol('@symbol')">
    <toaster-container toaster-options="{'time-out': 3000, 'close-button':false, 'animation-class': 'toast-top-right'}"></toaster-container>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Main")">
                <img src="/Image/title.png" alt="fashion form-angular fashion"/>
                </a>
            </div>
            @{
                Html.RenderPartial("_HeaderView");
            }

        </div>
    </div>
    <div class="body-content">
        <section>
            @RenderBody()
        </section>
        <footer>
            @Html.Partial("_FooterPartial")
        </footer>
    </div>
    <div id="up">
        <div class="btn btn-primary"><span class="glyphicon glyphicon-arrow-up"></span></div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/slick.min.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/Angular/Common/toaster.js"></script>
    <script src="~/Scripts/Angular/Common/angular-fancy-modal.js"></script>
    <script src="~/Scripts/Angular/Common/HttpServices.js"></script>
    <script src="~/Scripts/Angular/Common/LazyLoadService.js"></script>
    <script src="~/Scripts/Angular/Common/SerializeToObject.js"></script>
    <script src="~/Scripts/Angular/Common/DirectiveLoading.js"></script>
    <script src="~/Scripts/Angular/Common/DirectiveCompareTo.js"></script>
    <script src="~/Scripts/Angular/Common/ngtooltips.js"></script>

    <script src="~/Scripts/Angular/Services/cartSvc.js"></script>
    <script src="~/Scripts/Angular/Global/GlobalApp.js"></script>
    <script src="~/Scripts/Angular/Account/Register/Controller.js"></script>
    <script src="~/Scripts/Angular/Cart/cartStateController.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
