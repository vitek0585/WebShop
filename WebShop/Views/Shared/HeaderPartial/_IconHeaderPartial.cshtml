<li class="dropdown icon-menu settings-culture">
    <i class="menu-option glyphicon glyphicon-cog dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
    </i>

    <ul class="dropdown-menu" ng-controller="collapseCtrl">
        @*Currency*@
        <li>
            <a data-toggle="collapse.curr" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" ng-click="collapseCurr($event)">
                <span class="text-uppercase cursor-href">@Resource.Currency<i class="glyphicon glyphicon-menu-down"></i></span>
            </a>
        </li>
        <li>
            <div ng-class="collapse.curr?'sub-menu-collapse':'sub-menu-in'" id="collapseExample" class="dropdown-menu-content">
                <div class="text-uppercase">
                    @Html.ActionLink(Resource.CurrencyUSD, "ChangeCurrency", "Main", new { currency = "usd", refUrl = Request.Url.AbsoluteUri }, null)

                </div>
                <hr />
                <div class="text-uppercase">
                    @Html.ActionLink(Resource.CurrencyUAH, "ChangeCurrency", "Main", new { currency = "uah", refUrl = Request.Url.AbsoluteUri }, null)
                </div>
            </div>
        </li>
        @*Language*@
        <li>
            <a data-toggle="collapse.lang" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" ng-click="collapseLang($event)">
                <span class="text-uppercase cursor-href">@Resource.Language<i class="glyphicon glyphicon-menu-down"></i></span>
            </a>
        </li>
        <li>
            <div ng-class="collapse.lang?'sub-menu-collapse':'sub-menu-in'" id="collapseExample" class="dropdown-menu-content">
                <div class="text-uppercase">
                    @Html.ActionLink(Resource.English, "ChangeLanguage", "Main", new { lang = "en", refUrl = Request.Url.AbsoluteUri }, null)
                </div>
                <hr />
                <div class="text-uppercase">
                    @Html.ActionLink(Resource.Russian, "ChangeLanguage", "Main", new { lang = "ru", refUrl = Request.Url.AbsoluteUri }, null)
                </div>
            </div>
        </li>

    </ul>

</li>
