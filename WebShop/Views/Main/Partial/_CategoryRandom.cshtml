@using WebShop.Models.InterfacesModel
@foreach (var cat in ViewBag.RandCategories as IEnumerable<ICategoryModel>)
{

    <div class="col-md-3 category-widg">
        <div style="position: relative;">
            <div class="fast-info flexbox-container">
                <div class="text-center">
                    <a href="@Url.Action("Cat","Catalog")" class="btn btn-primary btn-buy">@Resource.GoView</a>
                </div>
            </div>
            <img src="/Image/Categories/@cat.Photo" alt="" style="height: 250px; width: 100%" />
        </div>
        <div class="text-center speed-info-title title-text-sait">@cat.CategoryName</div>
    </div>
}


