
<div class="item-prod  anim-show" ng-cloak="true" ng-init="href='/Fashion/Good/'+item.goodId">
    <input type="hidden" ng-bind="::item.goodId" />
    <div class="image-prod col-xs-12 col-sm-12" ng-cloak="true">
        @*основная картинка*@
        <slick class="slider-for{{::$index}}"
               as-nav-for='.slider-nav{{::$index}}'
               fade="true"
               data="item"
               arrows="false"
               init-onload=true>
            <div ng-repeat="photo in item.photos track by $index| limitTo:3">
                <div ng-if="::item.discount>0" class="text-uppercase sale-shape">@Resource.Discount</div>
                @*<zoom ng-src="{{::'/getPhoto/'+photo}}" alt="not img" class="primary-img"
                    style="width: 100%;" mark-height="100" mark-width="100" zoom-lvl="3"  />*@
                @*<a href="{{::'/Home/GetDetails/'+item.goodId}}">
                        <img ng-src="{{::'/Image/Products/'+photo}}"
                             style="width: 100%; height: 385px;"/>

                    </a>*@
                <a ng-href="{{::href}}">
                    <div ng-style="{'background':'url(/Image/Products/{{::photo}}) no-repeat center','background-size': 'cover'}" class="primary-img"></div>
                </a>
            </div>
            <div ng-if="::item.photos.length==0">
                <a ng-href="{{::href}}">
                    <div ng-style="{'background':'url(/Image/not-image.png) no-repeat center','background-size': 'contain'}"
                         class="primary-img"
                         style="width: 100%;">

                    </div>
                </a>
            </div>
        </slick>
        @*картинки выбора*@
        <div class="image-slider" ng-cloak="true">
            <div class="image-prod-all">
                <slick class="slider-nav{{::$index}}"
                       as-nav-for='.slider-for{{::$index}}'
                       infinite="true" dots=false
                       style="width: 60px"
                       slides-to-show=3
                       slides-to-scroll=1
                       swipe="true"
                       focus-on-select="true"
                       data="item" init-onload=true
                       arrows="false"
                       vertical="true">
                    <div ng-repeat="photo in item.photos track by $index | limitTo:3">
                        <img class="image-item cursor-href" ng-src="{{::'/Image/Products/'+photo}}" alt="not img"
                             style="width: 50px; height: 80px;" />
                    </div>
                </slick>
            </div>
        </div>
    </div>
    <div class="description-prod col-xs-12 col-sm-12">
        <div class="name-prod">{{::item.goodName}}</div>
        <div class="price-prod" ng-class="::item.discount>0?'old-price':''">{{::item.priceUsd | currencyExtend:0}}</div>
        <div class="new-price" ng-if="::item.discount>0">{{::item.priceWithDiscount | currencyExtend:0}}</div>
    </div>
    <div ng-if="::item.goodCount>0" class="container-action-prod">
        <a ng-href="{{::href}}" class="action-prod btn glyphicon glyphicon-shopping-cart">
        </a>
    </div>
    <div ng-if="::item.goodCount==0" class="container-action-prod">
        <h4>@Resource.NotInStock</h4>
    </div>
</div>

