@{
    ViewBag.Title = "fashion".ToUpper();

}
<div id="notifyWin" class="success-notify notify"></div>


<div class="row home" ng-cloak id="container" ng-controller="ctrl">
    <div class="index-caroudel shadow">
        <slick infinite="true" slides-to-show="1" slides-to-scroll="1" arrows="true" autoplay-speed="2000" autoplay="false"
               speed="500"
               id="carousel-base">
            <div class="carousel-slide" style="background: url(/Image/Carousel/slide-fashion-women.jpg) no-repeat;background-position: 50%;" ng-init="slide={title:'@Resource.Discount', text:'@Resource.ToUp 20%'}">
                @Html.Partial("Partial/_CarouselSlidePartial")
            </div>
            <div class="carousel-slide" style="background: url(/Image/Carousel/slide-fashion-women-2.jpg) no-repeat;background-position: 50%;" ng-init="slide={title:'@Resource.Discount', text:'@Resource.ToUp 20%'}">
                @Html.Partial("Partial/_CarouselSlidePartial")
            </div>
            <div class="carousel-slide" style="background: url(/Image/Carousel/slide-fashion-women-3.jpg) no-repeat;background-position: 50%;" ng-init="slide={title:'@Resource.Discount', text:'@Resource.ToUp 20%'}">
                @Html.Partial("Partial/_CarouselSlidePartial")
            </div>
        </slick>
    </div>
    <div class="prod-container" >
        @*Categories*@
        <div class="row row-nomargin">
            <div class="text-center">
                <p class="separator"></p>
                <span class="separator-text">@Resource.Categories</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 other-prod row-nomargin row-nopadding ">
                @Html.Partial("Partial/_CategoryRandom")
            </div>
        </div>
        @*End Categories*@
        @*New goods*@
        <div class="row">
            <div class="text-center">
                <p class="separator"></p>
                <span class="separator-text">@Resource.NewGoods</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div ng-if="items.length==0" style="height: 500px" class="text-center flexbox-container">
                    <img src="~/Image/loader.gif" alt="loading">
                </div>
                <div class="col-md-3 col-sm-2 anim-show" ng-repeat="item in items |limitTo:4 track by $index">
                    @Html.Partial("Partial/_ProductsPartial")
                </div>
            </div>
        </div>
        @*End new goods*@
        @*Dress by type*@
        <div class="row">
            <div class="text-center">
                <p class="separator"></p>
                <span class="separator-text">@Resource.DressFor</span>
            </div>
        </div>
        <div class="row blockquote-wrapper" >
            <div class="col-md-9 col-md-offset-3">
                @Html.Partial("/Views/CommonPartial/_BlockqouteInfo.cshtml", null, new ViewDataDictionary()
                {
                    {"src", @"/Image/blockqoute-dress-for.png"},
                    {"title", Resource.BlockqouteDressForTitle},
                    {"text", Resource.BlockqouteDressFor}
                })
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-push-1 other-prod">
                @Html.Partial("Partial/_FastBuyBigPartial", null,
                    new ViewDataDictionary()
                    {
                        {"src", "/Image/dress-for-man.jpg"},
                        {"gender", Resource.ForMan}
                    })
                @Html.Partial("Partial/_FastBuyBigPartial", null,
                    new ViewDataDictionary()
                    {
                        {"src", "/Image/Index/BigFast/img-1.jpg"},
                        {"gender", Resource.ForWoman}
                    })
            </div>
        </div>
        @*Posts*@
        <div class="row">
            <div class="text-center">
                <p class="separator"></p>
                <span class="separator-text">@Resource.LatestPosts</span>
            </div>
        </div>
        <div class="row">

            @Html.Partial("Partial/_PostsPartial", null,
                new ViewDataDictionary()
                {
                    {"Path", @"/Image/Index/Posts/post1.jpg"},
                    {"Title", "Lorem ipsum dolor"},
                    {"Content", "This business template is suited for a corporate, advertising, media, design, hosting, it company, agency, studio etc. but it can easily be used for a personal page or a portfolio."}
                })
            @Html.Partial("Partial/_PostsPartial", null,
                new ViewDataDictionary()
                {
                    {"Path", @"/Image/Index/Posts/post2.jpg"},
                    {"Title", "Lorem ipsum dolor"},
                    {"Content", "This business template is suited for a corporate, advertising, media, design, hosting, it company, agency, studio etc. but it can easily be used for a personal page or a portfolio."}
                })
        </div>
        @*End Posts*@
        <div class="row">
            <div class="text-center">
                <p class="separator"></p>
                <span class="separator-text">@Resource.MoreUs</span>
            </div>
        </div>
        @*social*@
        <div class="scd-content-social">
           
            <ul class="list-inline list-social">
                <li class="fb">
                    <a href="https://facebook.com/" target="_blank">
                        <span></span><strong>
                            Facebook
                        </strong>
                    </a>
                </li>
                <li class="pn">
                    <a href="http://pinterest.com/" target="_blank">
                        <span style="background-position: 0 -123px;"></span><strong>
                            Pinterest
                        </strong>
                    </a>
                </li>
                <li class="vk">
                    <a href="http://vk.com/" target="_blank">
                        <span style="background-position: 0 -287px;"></span><strong>
                            Vkontakte
                        </strong>
                    </a>
                </li>
                <li class="gp">
                    <a href="https://plus.google.com/" target="_blank">
                        <span style="background-position: 0 -82px;"></span><strong>
                            Google +
                        </strong>
                    </a>
                </li>
                <li class="in">
                    <a href="http://instagram.com/" target="_blank">
                        <span style="background-position: 0 -164px;"></span><strong>
                            Instagram
                        </strong>
                    </a>
                </li>
                <li class="yt">
                    <a href="https://youtube.com/" target="_blank">
                        <span style="background-position: 0 -205px;"></span><strong>
                            YouTube
                        </strong>
                    </a>
                </li>
                <li class="tb">
                    <a href="http://asoslive.tumblr.com/" target="_blank">
                        <span style="background-position: 0 -41px;"></span><strong>
                            Twiter
                        </strong>
                    </a>
                </li>
            </ul>
        </div>
        @*End social*@
    </div>
</div>

