@using WebShop.Infostructure.BreadCrumsService
@model ITypeCategoryModel<ICategoryModel>

@{
    ViewBag.Title = string.Concat(Resource.Categories.ToUpper(), "-", Model.TypeName);
    var hreffCss = string.Format(@"/Content/Categories-{0}.css", Model.TypeByHref);
}
<div class="row home" ng-cloak id="container">
    <div class="container">
        @Html.GenerateBreadCrumbs(new BreadCrumbsCommon(Url), Model.TypeName)

        @*Categories*@
        <div class="row">
            <div class="col-xs-12 all-product">
                <div class="row">
                    <div class="text-center">
                        <p class="separator"></p>
                        <span class="separator-text">@Model.TypeName</span>
                    </div>
                </div>
                <div>
                    @foreach (var item in Model.Items)
                    {
                        @Html.Partial("Partial/_CategoryWidget", item, new ViewDataDictionary { { "type", Model.TypeByHref } })

                    }
                </div>
            </div>
        </div>
        @*End Categories*@
        @*Sales*@
        <div class="row">
            <div class="sale-widg-prods">
                @Html.Action("Sale", new { type = Model.TypeByHref })
            </div>
        </div>
        @*End Sales*@
    </div>
</div>

@section scripts
{
    @*<link href="~/Content/DetailItem.css" rel="stylesheet" />*@
    @*<link href="~/Content/ItemProd.css" rel="stylesheet" />
        <link href="~/Content/DetailItem.css" rel="stylesheet" />
        <link href="~/Content/WidgetRandom.css" rel="stylesheet" />*@
    <link href="~/Content/Categories.css" rel="stylesheet" />
    <link href="@hreffCss" rel="stylesheet" />
    <script src="~/Scripts/Angular/Common/Slick.js"></script>
    <script src="~/Scripts/Angular/Catalog/Controller/Categories.js"></script>
}
